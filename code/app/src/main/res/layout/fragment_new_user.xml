<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/baseMargin"
    android:layout_marginBottom="@dimen/baseMargin"
    android:orientation="vertical"
    android:id="@+id/newUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/baseMargin">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onTextClick"
            android:text="@string/enterName"
            android:textColor="@color/textDark"
            android:textSize="@dimen/fontEditSize" />

        <EditText
            android:id="@+id/loginNewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name"
            android:backgroundTint="@color/textDark"
            android:textSize="@dimen/fontEditSize"
            android:textCursorDrawable = "@null"/>

        <TextView
            android:id="@+id/textView5"
            android:textColor="@color/textDark"
            android:textSize="@dimen/fontEditSize"
            android:clickable="true"
            android:onClick="onTextClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enterUsername" />

        <EditText
            android:id="@+id/loginNewUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Username"
            android:backgroundTint="@color/textDark"
            android:textSize="@dimen/fontEditSize"
            android:textCursorDrawable = "@null"/>

        <TextView
            android:id="@+id/textView3"
            android:textColor="@color/textDark"
            android:textSize="@dimen/fontEditSize"
            android:clickable="true"
            android:onClick="onTextClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enterPassword" />

        <EditText
            android:id="@+id/loginNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:backgroundTint="@color/textDark"
            android:textSize="@dimen/fontEditSize"
            android:textCursorDrawable = "@null"/>
    </LinearLayout>
</ScrollView>
