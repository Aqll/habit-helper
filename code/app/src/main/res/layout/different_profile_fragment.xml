<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profilePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DifferentProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/profileDisplayName"
        android:layout_width="382dp"
        android:layout_height="84dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/cabin_medium"
        android:gravity="center"
        android:text="Name"
        android:textColor="@color/accent2"
        android:textSize="50dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/acceptRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/declineRequest"
        app:layout_constraintEnd_toStartOf="@+id/declineRequest"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/declineRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Decline"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/acceptRequest"
        app:layout_constraintTop_toBottomOf="@+id/profileDisplayName"
        tools:visibility="visible" />

    <Button
        android:id="@+id/sendRequest"
        android:layout_width="136dp"
        android:layout_height="63dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="80dp"
        android:text="send request"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/habitsRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileDisplayName"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/habitsRecyclerView"
        android:layout_width="406dp"
        android:layout_height="390dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/unfollowUserButton"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="270dp"
        android:layout_marginEnd="10dp"
        android:text="Stop Following"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/profileDisplayName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.352" />

</androidx.constraintlayout.widget.ConstraintLayout>


