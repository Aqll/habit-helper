<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center"


    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/loginWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/baseMargin"
        android:gravity="left"
        android:text="@string/welcomeMessage"
        android:textColor="@color/fontColor"
        android:textSize="@dimen/fontTitleSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/loginEditEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/baseMargin"
            android:backgroundTint="@color/fontColor"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/fontColor"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/fontEditSize" />

        <EditText
            android:id="@+id/loginEditPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/baseMargin"
            android:backgroundTint="@color/fontColor"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/fontColor"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/fontEditSize" />

        <Button
            android:id="@+id/loginButtonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/baseMargin"
            android:backgroundTint="@color/button"
            android:onClick="onLoginSignInClick"
            android:text="@string/submitLogin" />

        <TextView
            android:id="@+id/loginButtonSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/baseMargin"
            android:clickable="true"
            android:gravity="right"
            android:onClick="onLoginSignUpClick"
            android:text="@string/newUser"
            android:textColor="@color/fontColor"
            android:textSize="@dimen/fontEditSize" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/baseMargin"
            android:backgroundTint="@color/button"
            android:onClick="onTestFollowers"
            android:text="CLICK ME" />
    </LinearLayout>

</LinearLayout>