<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center"


    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/loginSubWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/cabin_medium"
        android:text="Welcome To"
        android:textColor="@color/textDark"
        android:textSize="@dimen/fontSubTitleSize" />


    <TextView
        android:id="@+id/loginWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/baseMargin"
        android:gravity="center"
        android:fontFamily="@font/cabin_medium"
        android:text="@string/welcomeMessage"
        android:textColor="@color/accent2"
        android:textSize="@dimen/fontTitleSize" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp">

        <EditText
            android:id="@+id/loginEditEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/baseMargin"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/textDark"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/fontEditSize" />

        <EditText
            android:id="@+id/loginEditPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/baseMargin"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/textDark"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/fontEditSize" />

        <Button
            android:id="@+id/loginButtonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/baseMargin"
            android:backgroundTint="@color/button1"
            android:text="@string/submitLogin"
            app:cardCornerRadius="@dimen/buttonMargin" />


        <TextView
            android:id="@+id/loginButtonSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/baseMargin"
            android:clickable="true"
            android:gravity="right"
            android:text="@string/newUser"
            android:textColor="@color/textDark"
            android:textSize="@dimen/fontEditSize" />

    </LinearLayout>


</LinearLayout>